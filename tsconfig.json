// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",     /* Recommended React Native TSConfig base */
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react-native",
		"lib": ["es6", "ES2021.String", "es2016","ES2018", "ES2019"],
		"module": "commonjs",
		"target": "es6",
		"moduleResolution": "node",
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"baseUrl": "./src/",
		"paths": {
			"api/*": ["api/*"],
			"action/*": ["redux/action/*"],
			"saga": ["redux/saga/"],
			"reducer": ["redux/reducer/"],
			"store": ["redux/store/"],
			"selector/*": ["redux/selector/*"],
			"utils": ["utils/"],
			"config/*": ["config/*"],
			"hook/*": ["hook/*"],
			"assets": ["assets/"],
			"screen": ["screen/"],
			"component": ["component/"],
			"navigation": ["navigation/"],
			"model": ["model/"],
			"core/*": ["core/*"],
			"core/": ["core/"],
			"common": ["common/"],
			"library": ["library/"],
			"library/*": ["library/*"]
		},
		"resolveJsonModule": true,
		"noImplicitAny": true
	},
	"include": ["src/**/*"],
	"exclude": ["babel.config.js", "metro.config.js", "jest.config.js"]
}
